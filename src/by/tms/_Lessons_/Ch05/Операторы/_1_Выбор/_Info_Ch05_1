Ch05.1

If.

if (условие) {оператор;} - если условие true, то выполняется оператор
else оператор_1; - если условие false, то выполняется этот оператор

Вложенный if.
if(условие) {
  if(условие_1) {оператор_1};
  if(условие_2) {оператор_2};
  else оператор_3;
  }
else оператор;

Конструкция if_else_if. (Сверху вниз)
if (условие) {оператор;}
else if (условие_2) {оператор_2;}
else if (условие_3) {оператор_3;}
else if (условие_n) {оператор_n;}
else оператор_1;

Switch.

switch (выражение) {
  case значение_1:
    оператор_1;
    break;
  case значение_2:
    оператор_2;
    break;
  case значение_n:
    оператор_n;
    break;
  default:
    оператор;
}

break можно опустить;

Вложенный switch.

switch (выражение_1) {
  case значение_1:
    switch (выражение_2) {
      case значение_1:
        оператор_1;
        break;
      case значение_n:
        оператор_n;
        break;
      default:
        оператор;
    }
    break;
  case значение_n:
    оператор_n;
    break;
  default:
    оператор;
}